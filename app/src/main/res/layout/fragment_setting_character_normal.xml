<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:outLine="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.maple_stat.ui.setting.setting_inner_fragment.SettingCharacterNormalFragment">
    <data>
        <variable
            name="fragment"
            type="com.example.maple_stat.ui.setting.setting_inner_fragment.SettingCharacterNormalFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_left_green"
                    android:gravity="center"
                    android:text="직업"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="1.0"
                    outLine:textStrokeColor="#000000" />


                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:background="@drawable/stat_row_textview_right"
                    android:gravity="center|left"
                    android:text="메르세데스"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="0.5"
                    outLine:textStrokeColor="#000000"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_left_green"
                    android:gravity="center"
                    android:text="레벨"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="1.0"
                    outLine:textStrokeColor="#000000" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:background="@drawable/stat_row_textview_right"
                    android:gravity="center|left"
                    android:text="1"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="0.5"
                    outLine:textStrokeColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_left_dark"
                    android:gravity="center"
                    android:text="vs대상"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="1.0"
                    outLine:textStrokeColor="#000000" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:background="@drawable/stat_row_textview_right"
                    android:gravity="left|center"
                    android:text="스우"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="0.5"
                    outLine:textStrokeColor="#000000" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_left_dark"
                    android:gravity="center"
                    android:text="버프"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="1.0"
                    outLine:textStrokeColor="#000000" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:background="@drawable/stat_row_textview_right"
                    android:gravity="left|center"
                    android:text="자버프"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="0.5"
                    outLine:textStrokeColor="#000000" />

            </TableRow>


        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>