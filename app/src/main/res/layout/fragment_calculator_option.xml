<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:outLine="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.maple_stat.ui.calculator.calculator_inner_fragment.CalculatorOptionFragment">
    <data>
        <variable
            name="fragment"
            type="com.example.maple_stat.ui.calculator.calculator_inner_fragment.CalculatorOptionFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorWhite"
                android:layout_weight="1"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:shrinkColumns="*"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_margin="3dp">

                            <com.example.maple_stat.custom.CustomTextOutLine
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:background="@drawable/stat_row_textview_left_blue"
                                android:gravity="center"
                                android:text="템 부위"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:singleLine="true"
                                outLine:textStroke="true"
                                outLine:textStrokeWidth="1.0"
                                outLine:textStrokeColor="@color/colorPrimaryDark" />

                            <com.example.maple_stat.custom.CustomSpinner
                                android:id="@+id/custom_spinner_part"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="2dp"
                                android:prompt="@string/spinner_prompt"
                                android:entries="@array/item_part"
                                android:background="@drawable/spinner_right_state"
                                android:gravity="center"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp"
                                android:singleLine="true"
                                outLine:textStroke="true"
                                outLine:textStrokeWidth="1.0"
                                outLine:textStrokeColor="@color/colorPrimaryDark" />

                            <com.example.maple_stat.custom.CustomTextOutLine
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:id="@+id/textView_level"
                                android:layout_marginLeft="2dp"
                                android:background="@drawable/stat_row_textview_left_blue"
                                android:gravity="center"
                                android:text="템 레벨"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:singleLine="true"
                                outLine:textStroke="true"
                                outLine:textStrokeWidth="1.0"
                                outLine:textStrokeColor="@color/colorPrimaryDark" />

                            <com.example.maple_stat.custom.CustomSpinner
                                android:id="@+id/custom_spinner_level"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:prompt="@string/spinner_prompt"
                                android:entries="@array/item_level"
                                android:background="@drawable/spinner_right_state"
                                android:gravity="center"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp"
                                android:singleLine="true"
                                outLine:textStroke="true"
                                outLine:textStrokeWidth="1.0"
                                outLine:textStrokeColor="@color/colorPrimaryDark" />

                        </TableRow>

                    </TableLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout_option_replace"
                        android:layout_weight="1">

                    </FrameLayout>

                </TableRow>

            </TableLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>



