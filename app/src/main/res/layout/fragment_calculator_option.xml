<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:outLine="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.maple_stat.ui.calculator.calculator_inner_fragment.CalculatorOptionFragment">
    <data>
        <variable
            name="fragment"
            type="com.example.maple_stat.ui.calculator.calculator_inner_fragment.CalculatorOptionFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/colorWhite"
                android:layout_weight="1"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp">

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_row_textview_left_blue"
                        android:gravity="center"
                        android:text="템 부위"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="1.0"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomSpinner
                        android:id="@+id/custom_spinner_kind"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:prompt="@string/spinner_prompt"
                        android:entries="@array/item_kind"
                        android:background="@drawable/spinner_right_state"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="1.0"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/stat_row_textview_left_blue"
                        android:gravity="center"
                        android:text="템 레벨"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="1.0"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomSpinner
                        android:id="@+id/custom_spinner_level"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:prompt="@string/spinner_prompt"
                        android:entries="@array/item_level"
                        android:background="@drawable/spinner_right_state"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="1.0"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_row_textview_left_green"
                        android:gravity="center"
                        android:text="주스텟"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="1.0"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/stat_row_textview_right"
                        android:gravity="center|right"
                        android:text="0"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="0.5"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/stat_row_textview_left_green"
                        android:gravity="center"
                        android:text="부스텟"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="1.0"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_row_textview_right"
                        android:gravity="center|right"
                        android:text="0"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="0.5"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_row_textview_left_green"
                        android:gravity="center"
                        android:text="공격력"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="1.0"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/stat_row_textview_right"
                        android:gravity="center|right"
                        android:text="0"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="0.5"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/stat_row_textview_left_green"
                        android:gravity="center"
                        android:text="올스텟"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="1.0"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_row_textview_right"
                        android:gravity="center|right"
                        android:text="0"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="0.5"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:text="="
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:textSize="20sp" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_row_textview_left_green"
                        android:gravity="center"
                        android:text="주스텟"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="1.0"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/stat_row_textview_right"
                        android:gravity="center|right"
                        android:text="0"
                        android:textSize="20dp"
                        android:singleLine="true"
                        outLine:textStroke="true"
                        outLine:textStrokeWidth="0.5"
                        outLine:textStrokeColor="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:textSize="20sp" />

                </TableRow>

            </TableLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>



