<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.maple_stat.ui.setting.setting_inner_fragment.SettingGuildActiveFragment">
    <data>
        <variable
            name="fragment"
            type="com.example.maple_stat.ui.setting.setting_inner_fragment.SettingGuildActiveFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/setting_row_textview_blue"
                    android:gravity="center"
                    android:text="보공"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    app:textStroke="true"
                    app:textStrokeWidth="1.0"
                    app:textStrokeColor="#000000" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/stat_row_textview_right"
                    android:gravity="center|right"
                    android:text="0"
                    android:textSize="20dp"
                    android:singleLine="true"
                    app:textStroke="true"
                    app:textStrokeWidth="0.5"
                    app:textStrokeColor="#000000" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_button_circle"
                    android:gravity="center"
                    android:onClick="@{(view) -> fragment.pressCharacterGuildActive1Button(view)}"
                    android:src="@drawable/ic_delete_nomal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/setting_row_textview_blue"
                    android:gravity="center"
                    android:text="방무"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    app:textStroke="true"
                    app:textStrokeWidth="1.0"
                    app:textStrokeColor="#000000" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/stat_row_textview_right"
                    android:gravity="center|right"
                    android:text="0"
                    android:textSize="20dp"
                    android:singleLine="true"
                    app:textStroke="true"
                    app:textStrokeWidth="0.5"
                    app:textStrokeColor="#000000" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_button_circle"
                    android:gravity="center"
                    android:onClick="@{(view) -> fragment.pressCharacterGuildActive2Button(view)}"
                    android:src="@drawable/ic_delete_nomal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/setting_row_textview_blue"
                    android:gravity="center"
                    android:text="데미지"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    app:textStroke="true"
                    app:textStrokeWidth="1.0"
                    app:textStrokeColor="#000000" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/stat_row_textview_right"
                    android:gravity="center|right"
                    android:text="0"
                    android:textSize="20dp"
                    android:singleLine="true"
                    app:textStroke="true"
                    app:textStrokeWidth="0.5"
                    app:textStrokeColor="#000000" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_button_circle"
                    android:gravity="center"
                    android:onClick="@{(view) -> fragment.pressCharacterGuildActive3Button(view)}"
                    android:src="@drawable/ic_delete_nomal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@color/colorLineGray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/setting_row_textview_blue"
                        android:gravity="center"
                        android:text="크뎀"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:singleLine="true"
                        app:textStroke="true"
                        app:textStrokeWidth="1.0"
                        app:textStrokeColor="#000000" />

                    <com.example.maple_stat.custom.CustomTextOutLine
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/stat_row_textview_right"
                        android:gravity="center|right"
                        android:text="0"
                        android:textSize="20dp"
                        android:singleLine="true"
                        app:textStroke="true"
                        app:textStrokeWidth="0.5"
                        app:textStrokeColor="#000000" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_effect_button_circle"
                        android:gravity="center"
                        android:onClick="@{(view) -> fragment.pressCharacterGuildActive4Button(view)}"
                        android:src="@drawable/ic_delete_nomal" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="="
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite"
                    android:textSize="20sp" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_left_green"
                    android:gravity="center"
                    android:text="주스텟"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    app:textStroke="true"
                    app:textStrokeWidth="1.0"
                    app:textStrokeColor="@color/colorPrimaryDark" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_right"
                    android:gravity="center|right"
                    android:text="0"
                    android:textSize="20dp"
                    android:singleLine="true"
                    app:textStroke="true"
                    app:textStrokeWidth="0.5"
                    app:textStrokeColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite"
                    android:textSize="20sp" />

            </TableRow>

        </TableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>