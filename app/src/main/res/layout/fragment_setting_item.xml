<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.maple_stat.ui.setting.setting_inner_fragment.SettingItemFragment">
    <data>
        <variable
            name="fragment"
            type="com.example.maple_stat.ui.setting.setting_inner_fragment.SettingItemFragment"/>
    </data>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5">

        <com.example.maple_stat.custom.SquareLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:background="@color/colorDarkGray">

            <com.example.maple_stat.custom.CustomTextOutLine
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGray"
                android:layout_margin="3dp"
                android:gravity="center"
                android:text="주스텟"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20dp"
                android:singleLine="true"
                app:textStroke="true"
                app:textStrokeWidth="1.0"
                app:textStrokeColor="#000000" />

        </com.example.maple_stat.custom.SquareLayout>

    </GridLayout>

</layout>
