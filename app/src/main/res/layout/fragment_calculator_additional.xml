                        android:gravity="center"
                        android:background="#FFFFFF"
                        android:text="0"
                        android:selectAllOnFocus="true"
                        android:textSize="20sp"
                        android:maxLength="5"
                        android:inputType="number"
                        android:digits="0123456789"/>

