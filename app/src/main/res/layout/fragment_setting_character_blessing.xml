<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:outLine="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.maple_stat.ui.setting.setting_inner_fragment.SettingCharacterBlessingFragment">
    <data>
        <variable
            name="fragment"
            type="com.example.maple_stat.ui.setting.setting_inner_fragment.SettingCharacterBlessingFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/setting_row_textview_blue"
                    android:gravity="center"
                    android:text="정령의 축복"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="1.0"
                    outLine:textStrokeColor="#000000" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_right"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:selectAllOnFocus="true"
                    android:text="0"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/setting_row_textview_blue"
                    android:gravity="center"
                    android:text="여제의 축복"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="1.0"
                    outLine:textStrokeColor="#000000" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_right"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="5"
                    android:selectAllOnFocus="true"
                    android:text="0"
                    android:textSize="20dp" />

            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:text="="
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite"
                    android:textSize="20sp" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_left_green"
                    android:gravity="center"
                    android:text="주스텟"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="1.0"
                    outLine:textStrokeColor="@color/colorPrimaryDark" />

                <com.example.maple_stat.custom.CustomTextOutLine
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/stat_row_textview_right"
                    android:gravity="center|right"
                    android:text="0"
                    android:textSize="20dp"
                    android:singleLine="true"
                    outLine:textStroke="true"
                    outLine:textStrokeWidth="0.5"
                    outLine:textStrokeColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/colorWhite"
                    android:textSize="20sp" />

            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>